<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ReadingActivityDay"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/pref_outer_pad_horiz"
    android:paddingRight="@dimen/pref_outer_pad_horiz"
    android:paddingEnd="@dimen/pref_outer_pad_horiz"
    android:paddingStart="@dimen/pref_outer_pad_horiz">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.0"
        android:background="@drawable/pref_button_transparent"
        android:paddingBottom="12.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="12.0dip"
        android:scaleType="center"
        android:scaleX="@dimen/rtl_mirror_scalex"
        app:srcCompat="?settingsAutoBrightness"
        android:paddingStart="10.0dip"
        android:paddingEnd="10.0dip" />
    <FrameLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:gravity="center_vertical">
        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.0dip"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip"
            android:progressDrawable="?scrubberTrackAltDrawable"
            android:thumb="?scrubberBrightnessThumb"
            android:paddingStart="20.0dip"
            android:paddingEnd="20.0dip" />
  </FrameLayout>
</LinearLayout>