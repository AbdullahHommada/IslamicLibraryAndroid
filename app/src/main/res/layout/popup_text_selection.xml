<!-- popup_text_selection.xmlelection.xml -->

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/selection_menu_card"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    card_view:cardBackgroundColor="#fafafa"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:divider="?android:dividerHorizontal"
        android:orientation="vertical"
        android:showDividers="middle"
        >

        <LinearLayout
            android:id="@+id/text_selection_popup_0"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/action_copy_text"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:title="@string/action_copy_text"
                card_view:srcCompat="@drawable/ic_content_copy_black_24dp" />


            <ImageButton
                android:id="@+id/action_select_all_text"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:title="@string/action_copy_text"
                card_view:srcCompat="@drawable/ic_select_all_black_24dp" />


            <ImageButton
                android:id="@+id/action_share_text"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:title="@string/action_share_text"
                card_view:srcCompat="@drawable/ic_share_black_24dp"

                />

            <ImageButton
                android:id="@+id/action_add_comment"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:title="@string/action_add_note"
                android:visibility="gone"
                card_view:srcCompat="@drawable/ic_note_add_black_24dp"

                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/text_selection_popup_1"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"

            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/highlight_1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:title="@string/menu_highlight_color_red"
                card_view:srcCompat="@drawable/circle_red" />

            <ImageButton
                android:id="@+id/highlight_2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:title="@string/menu_highlight_color_blue"
                card_view:srcCompat="@drawable/circle_blue" />

            <ImageButton
                android:id="@+id/highlight_3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:scaleType="center"
                android:title="@string/menu_highlight_color_yellow"
                card_view:srcCompat="@drawable/circle_yellow" />

            <ImageButton
                android:id="@+id/highlight_4"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:title="@string/menu_highlight_color_green"
                card_view:srcCompat="@drawable/circle_green" />


            <ImageButton
                android:id="@+id/highlight_remove"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:title="@string/menu_remove_highlight"
                android:visibility="gone"
                card_view:srcCompat="@drawable/ic_highlight_off_black_24dp" />

        </LinearLayout>


        <!--     <android.support.v7.widget.Toolbar
                 android:id="@+id/text_selection_popup_0"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

             </android.support.v7.widget.Toolbar>

             <android.support.v7.widget.Toolbar
                 android:id="@+id/text_selection_popup_1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 >
             </android.support.v7.widget.Toolbar>
     -->

    </LinearLayout>
</android.support.v7.widget.CardView>
