<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/btn_sub_titles"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textColor="@color/toc_item_primary_color"
            android:ellipsize="end"
            style="@style/twoLineListPrimartText"
            tools:text="با كيف كان بدء الوحي لى النبي صلى الله عليه وسلم وقول الله نعالى إنا أوحينا ليك كما أوحينا إلى نوح والنبيين من بعده حدثنا الحميدي " />

        <TextView
            android:id="@+id/title_page_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/twoLineListSecondaryText"
            tools:text="جزء:1 صفحة 100" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_sub_titles"
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/arrow_into" />
</RelativeLayout>